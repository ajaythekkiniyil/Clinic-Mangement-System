<div className="container">
    {{!-- admin panel nav section --}}
    <nav class="navbar navbar-light bg-light">
        <h1 class="text-primary"><b>DENTACARE</b></h1>
        <div class="dropdown">
            <button class="btn btn-info dropdown-toggle" type="button" id="dropdownMenu2" data-toggle="dropdown"
                aria-haspopup="true" aria-expanded="false">
                Profile
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
                <img src="/images/undraw_profile_pic_ic5t.svg" class="" alt="" style="height: 50px;" />
                <p class="dropdown-item">{{adminName}}</p>
                <a href="/admin/logout" class="dropdown-item">Logout</a>
            </div>
        </div>
    </nav>
    {{!-- admin panel nav section  --}}


    <div class="container">
        <div class="row jumbotron">

            {{!-- admin pane left section  --}}
            <div class="col-4 ">
                <div class="d-flex justify-content-center">
                    <div class="">
                        <img src="/images/undraw_profile_pic_ic5t.svg" class="rounded-circle col-12 mt-2" width="100"
                            height="100" />
                        <div>
                            <h4 class="text-center ">{{adminName}}</h4>
                            {{!-- <h6 class="text-center">Abc@gamil.com</h6> --}}
                        </div>
                    </div>
                </div>
                <div class="row bg-info">
                    <a href="/admin/dashboard" class="col-12 text-white mt-1">
                        <h6><i class="fa fa-home ">Dashboard</i></h6>
                    </a>
                    <a href="/admin/doctors" class="col-12  text-white">
                        <h6><i class="fa fa-user-md ">Doctors</i></h6>
                    </a>
                    <a href="/admin/patients" class="col-12  text-white">
                        <h6><i class="fa fa-wheelchair ">Patients</i></h6>
                    </a>
                    <a href="/admin/appointments" class="col-12  text-white">
                        <h6><i class="fa fa-calendar">Appoinments</i></h6>
                    </a>
                </div>
            </div>
            {{!-- admin pane left section  --}}

            {{!-- admin pane right section  --}}
            <div class="col-8">
                <form action="/admin/addDoctorData" method="post">
                    <div class="form-group">
                        <label for="">Doctor Name</label>
                        <input type="text" class="form-control" name="doctor-name" placeholder="Enter Doctor Name">
                    </div>
                    <div class="form-group">
                        <label for="">Specialised</label>
                        <input type="text" class="form-control" name="specialised" placeholder="Specialised">
                    </div>
                    <div class="form-group">
                        <label for="">Field</label>
                        <input type="text" class="form-control" name="field" placeholder="Field">
                    </div>

                    <div class="form-group">
                        <label for="">Admin Password</label>
                        <input type="text" class="form-control" name="password" placeholder="Enter Password">
                    </div>
                    <button type="submit" class="btn btn-primary">Register</button>
                </form>
            </div>
            {{!-- admin pane right section  --}}
        </div>
    </div>
</div>