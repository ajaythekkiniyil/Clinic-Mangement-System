{{>navbars}}
<div class="container">
    <div class="row">

        {{!-- admin pane left section --}}
        <div class="col-4 ">
            <div class="d-flex justify-content-center">
                <div class="row">
                    <div class="col-12">
                        <img src="images/user.png" class="rounded-circle col-12 mt-2" />
                        {{!-- <i class="fa fa-camera upload-button"></i> --}}
                        <h4 class="text-center ">{{displayName}}</h4>
                    </div>
                </div>
            </div>
            <div class="row tab">
                <button class="col-12 tablinks" onclick="openTabs(event, 'allDoctors')" id="defaultOpen"><i
                        class="fa fa-home ">All Doctors</i></button>
                <button class="col-12 tablinks" onclick="openTabs(event, 'appointments')"><i
                        class="fa fa-user-md ">Appointments</i></button>
                <button class="col-12 tablinks" onclick="openTabs(event, 'consulted')"><i
                        class="fa fa-wheelchair ">Consulted Appointment</i></button>
                <button class="col-12 tablinks" onclick="openTabs(event, 'cancelled')"><i
                        class="fa fa-calendar">Cancelled Appointment</i></button>
            </div>


        </div>
        {{!-- admin pane left section --}}

        {{!-- admin pane right section --}}
        <div class="col-8 mt-5">

            {{!-- allDoctors tab --}}
            <div class="tabcontent" id="allDoctors">

                <h2 class="text-warning">Welcome {{displayName}} !</h2>
                <h4>You Can Take Appointmant Here</h4>

                <div class="row">
                    {{#each allDoctorDetails}}
                    <div class="col-12 col-md-4 mt-3">
                        <div class="card">
                            <div class="col-12">
                                <img class="card-img-top col-12" src="images/doctors/{{this._id}}.jpg" style="height: 150px;"
                                    alt="Card image cap" />
                            </div>
                            <div class="card-body">
                                <h2 class="">{{this.name}}</h2>
                                <h5 class="">{{this.specialised}}</h5>
                                <h6 class="">{{this.field}}</h6>
                                <a class="btn btn-success" href="">Book</a>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>

            </div>

            {{!--List of appointments tab --}}
            <div id="appointments" class="tabcontent">
                <h4>
                    <b>Welcome {{adminName}} !</b>
                </h4>
                <div class="col-12 mt-5">
                    <div class="col-12 mt-5">
                        <h4>
                            <b>List of doctors</b>
                        </h4>
                        <a href="/admin/adddoctors"><i class="fa fa-edit text-danger">Add Doctors</i></a>
                    </div>


                    <div class='table-responsive'>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">Doctors</th>
                                    <th scope="col">Specialised</th>
                                    <th scope="col">Speciality</th>
                                    {{!-- <th scope="col">Status</th> --}}
                                    <th scope="col">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each allDoctors}}
                                <tr id="{{this._id}}">
                                    <th scope="row">{{this.name}}</th>
                                    <td>{{this.specialised}}</td>
                                    <td>{{this.field}}</td>
                                    {{!-- <td>IN</td> --}}
                                    <td><a href="/admin/edit/{{this._id}}"><i class='fa fa-edit'
                                                style='font-size:24px'></i></a>
                                        <a href="#" onclick="deleteDoctor('{{this._id}}')"><i class='fa fa-trash'
                                                style='font-size:24px'></i></a>
                                    </td>
                                </tr>
                                {{/each}}

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            {{!-- List of consulted tab --}}
            <div id="consulted" class="tabcontent">
                <h4>
                    <b>Welcome {{adminName}} !</b>
                </h4>
                <div class="col-12 mt-5">
                    <div className="col-12 mt-5">
                        <h4>
                            <b>List of patients</b>
                        </h4>
                        <a href="/admin/addpatientsForm"><i class="fa fa-edit text-danger" style="">Add Patients</i></a>
                    </div>

                    <div class="row table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">Name</th>
                                    <th scope="col">Age</th>
                                    <th scope="col">Mobile</th>
                                    <th scope="col">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each allPatients}}
                                <tr id="{{this._id}}">
                                    <th scope="row">{{this.name}}</th>
                                    <td>{{this.age}}</td>
                                    <td>{{this.mobile}}</td>
                                    <td>
                                        <a href="/admin/editPatient/{{this._id}}"><i class='fa fa-edit'
                                                style='font-size:24px'></i></a>
                                        <a href="#" onclick="deletePatient('{{this._id}}')"><i class='fa fa-trash'
                                                style='font-size:24px'></i></a>
                                    </td>
                                </tr>
                                {{/each}}

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            {{!-- List of cancelled tab --}}
            <div id="cancelled" class="tabcontent">
                <h4>
                    <b>Welcome {{adminName}} !</b>
                </h4>
                <div class="col-12 mt-5">
                    <div class="col-12 mt-5">
                        <h4>
                            <b>List of Appointment</b>
                        </h4>
                        <a href="/admin/addAppointment"><i class="fa fa-edit text-danger" style="">Add
                                Appointment</i></a>
                    </div>
                    <div class="row">
                        <div class="col-12 col-md-6 mt-2">
                            <div class="card ">
                                <div class="col-12">
                                    <img class="card-img-top col-12" src="/images/doctor.png" style="height: 140px;"
                                        alt="Card image cap" />
                                    <h5 class="text-center">Dr.Catherin</h5>
                                    <h6 class="text-center">Orthodontist</h6>
                                </div>
                                <div class="card-body">

                                    <p class="col text-primary">Appointment Date: 23-04-2020</p>
                                    <p class="col text-primary">Session: Evening</p>
                                    <p class="col text-primary">Time : 04:15-04:30 pm</p>
                                    <p class="col text-primary">Booking for: Dr.Fais</p>
                                    <p class="col text-primary">Appointment Date: 23-04-2020</p>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{!-- admin pane right section --}}
</div>


<style>
    .dropdown-item:hover {
        color: blue;
    }

    .card:hover {
        color: green;
        box-shadow: 1px 8px 20px grey;
        -webkit-transition: box-shadow .6s ease-in;
    }

    /* Style the tab */
    .tab {
        float: left;
        border: 1px solid #ccc;
        background-color: #f1f1f1;

        height: 300px;
    }

    /* Style the buttons that are used to open the tab content */
    .tab button {
        display: block;
        background-color: inherit;
        color: black;
        padding: 22px 16px;
        border: none;
        outline: none;
        text-align: left;
        cursor: pointer;
        transition: 0.3s;
    }

    /* Change background color of buttons on hover */
    .tab button:hover {
        background-color: #ddd;
    }

    /* Create an active/current "tab button" class */
    .tab button.active {
        background-color: #ccc;
    }

    /* Style the tab content */
</style>


<script>

    function openTabs(evt, cityName) {
        var i, tabcontent, tablinks;
        tabcontent = document.getElementsByClassName("tabcontent");
        for (i = 0; i < tabcontent.length; i++) {
            tabcontent[i].style.display = "none";
        }
        tablinks = document.getElementsByClassName("tablinks");
        for (i = 0; i < tablinks.length; i++) {
            tablinks[i].className = tablinks[i].className.replace(" active", "");
        }
        document.getElementById(cityName).style.display = "block";
        evt.currentTarget.className += " active";
    }

    // Get the element with id="defaultOpen" and click on it
    document.getElementById("defaultOpen").click();
</script>